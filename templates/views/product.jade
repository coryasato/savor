extends ../layouts/default

block content
  .container.product-hero
    .fill.animated.fadeIn(style="background-image:url(" + heroImage + ")")

  .container
    .row
      .col-xs-12
        h1.product-blurb !{blurb} 

    .row.overview-section
      .col-md-8.col-sm-6
        p.red-family= overviewTitle
        !{overview} 
        <br />
        p.red-family= approachTitle
        !{approach}
        <br />
        p.red-family= solutionTitle
        !{solution}
      .specs.col-md-2.col-md-offset-2.col-sm-3.col-sm-offset-3
        h4.specsTitle= specsTitle
        p !{specs}

  .container.product-images
    .carousel(id="savorCarousel")
      .carousel-inner.wow.fadeIn
        - for(var i = 0; i < gallery.length; i++) 
          div.item.carousel-active-image
            .fill(style="background-image:url(" + gallery[i].url + ")")

      a.carousel-control.left(href="#savorCarousel" data-slide="prev")
        span.glyphicon.glyphicon-circle-arrow-left
      a.carousel-control.right(href="#savorCarousel" data-slide="next")
        span.glyphicon.glyphicon-circle-arrow-right

  .textured-bg
    .container.thumbnail-section
      .row
        .col-xs-12
          p.text-center.more-projects More Projects
      #container.row
        each thumbnail in thumbnails
          - var slugs = '/product/' + thumbnail.slug
          a(href= slugs)
            .col-xs-12.col-sm-4.iso-item.wow.fadeInDown(style="background-image:url(" + thumbnail.thumbnail.url + ")")
              .halfer
              span.iso-caption  
                p= thumbnail.thumbnailCaption
                p.thumb-type= thumbnail.thumbnailType

      .row
        .col-xs-12.padded-div
          a.no-deco(href="/solutions")
            p.text-center 
              span.view-all View All

block js
  script(src='/js/product.js')
    
    
    
        
