extends ../layouts/default

block content
  .solutions-section
    .container
      .row
        p.text-center.solutions-title Solutions

    .container.thumbnail-section-home
      #container.row
        each thumbnail in thumbnails
          - var slugs = '/product/' + thumbnail.slug
            a(href= slugs)
              .col-xs-12.col-sm-4.iso-item.wow.fadeInDown(style="background-image:url(" + thumbnail.thumbnail.url + ")")
                .halfer
                span.iso-caption
                  p= thumbnail.thumbnailCaption
                  p.thumb-type= thumbnail.thumbnailType

    //- Blurb
  .jumbotron-section
    h1.glyphicon.glyphicon-star
    h2.hero-text.text-center !{blurb}
    a.no-deco(href="/about")
      h4.text-center  
        span More about Savor Brands

